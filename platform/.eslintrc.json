{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "capitalized-comments": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "multi-or-nest",
      "consistent"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "func-style": [
      "error",
      "declaration"
    ],
    "no-duplicate-imports": "error",
    "no-lonely-if": "error",
    "no-nested-ternary": "error",
    "no-plusplus": "error",
    "no-undef": "off",
    "no-undef-init": "error",
    "no-undefined": "error",
    "no-unneeded-ternary": "error",
    "no-self-compare": "error",
    "no-use-before-define": "error",
    "no-useless-concat": "error",
    "no-var": "error",
    "prefer-const": "error",
    "require-await": "error",
    "yoda": "error"
  }
}
