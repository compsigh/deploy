generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum GraduatingClass {
  CO2028
  CO2027
  CO2026
  CO2025
  CO2024
  MASTERS
}

enum ProjectType {
  MOBILE_APP
  DESKTOP_APP
  APPLET
  GAME
  WEB_APP
  WEBSITE
  OPEN_SOURCE_CONTRIBUTION
  HARDWARE
  OTHER
}

model Participant {
  name            String          @unique
  email           String          @id @unique
  graduatingClass GraduatingClass
  team            Team            @relation(fields: [teamId], references: [id])
  teamId          String
  attended        Boolean         @default(false)
}

model Team {
  id           String        @id @default(uuid())
  name         String?
  participants Participant[]
  project      Project?
}

model Invite {
  id                   String @id @default(uuid())
  fromParticipantEmail String
  toParticipantEmail   String
}

model Project {
  id          String       @id @default(uuid())
  name        String
  type        ProjectType
  link        String
  notes       String?
  song        String?
  team        Team         @relation(fields: [teamId], references: [id])
  teamId      String       @unique
  evaluations Evaluation[]
}

model Evaluation {
  id         String  @id @default(uuid())
  judgeName  String
  judgeEmail String
  project    Project @relation(fields: [projectId], references: [id])
  projectId  String
  criterion1 Int
  criterion2 Int
  criterion3 Int
  criterion4 Int
  criterion5 Int
  vibes      Int
}
